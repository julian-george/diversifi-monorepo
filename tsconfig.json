{
  "compilerOptions": {
    "lib": ["esnext", "dom"],
    "target": "es6",
    "module": "commonjs",
    "jsx": "react",

    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["packages/**/*.ts", "packages/**/*.tsx"]
}
