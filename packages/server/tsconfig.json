{
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "lib": ["esnext", "dom"],
    "target": "es6",
    "module": "commonjs",
    "jsx": "react",

    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"]
}
